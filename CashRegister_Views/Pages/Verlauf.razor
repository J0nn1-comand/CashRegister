@page "/verlauf"
@using CashRegister.DAL
@using CashRegister.Models


<MudTabs Elevation="2" Rounded="true" Centered="true" Class="my-6" Color="Color.Dark">
    <MudTabPanel Icon="@Icons.Filled.FoodBank" Text="Gastro" />
    <MudTabPanel Icon="@Icons.Filled.IncompleteCircle" Text="Sennerei" />
</MudTabs>


<MudDataGrid Items="@_items" Filterable="true">
    <Columns>
        <Column T="Produkt" Field="@nameof(Produkt.Name)" />
        <Column T="Produkt" Field="@nameof(Produkt.Preis)" />
    </Columns>
</MudDataGrid>


@code {
    static CashRegisterContextDB context = new CashRegisterContextDB();

    static List<Produkt> Produkte = context.Produkt.ToList();

    private IEnumerable<Produkt> _items = Produkte;

}


