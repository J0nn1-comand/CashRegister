<MudDialog Style="width: 300px; height: 160px;">
    <DialogContent>
       Rueckgeld: @Rueckgeld CHF
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="CancelAll">Schließen</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public decimal Rueckgeld { get; set; }
    
    private void CancelAll()
    {
        MudDialog.CancelAll();
    }
}