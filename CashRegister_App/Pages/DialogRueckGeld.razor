<MudDialog Style="width: 300px; height: 160px;">
    <DialogContent>
       Rueckgeld: @Rueckgeld
    </DialogContent>
    <DialogActions>
        
        <MudButton Color="Color.Primary" OnClick="CancelAll">Close All</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public decimal Rueckgeld { get; set; }
    
    
    private void CancelAll()
    {
        MudDialog.CancelAll();
    }
}