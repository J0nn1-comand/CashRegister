



<MudFab OnClick="@toogleColor1" StartIcon="@Icons.Filled.AttachMoney" Href="/" Label="Kasse" Style="@currentColor1" />
<MudFab OnClick="@toogleColor2" StartIcon="@Icons.Filled.FormatListBulleted" Href="verlauf" Label="Verlauf" Style="@currentColor2" />
<MudFab OnClick="@toogleColor3" StartIcon="@Icons.Filled.Settings" Href="optionen" Label="Einstellungen" Style="@currentColor3" />

@code {
    private bool einkauf = true;
    private bool uebersicht = true;
    private bool optionen = true;

    [Parameter]
    public string currentColor1 { get; set; } = "color:black; margin-top:20px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";
    public string currentColor2 { get; set; } = "color:black; margin-top:20px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";
    public string currentColor3 { get; set; } = "color:black; margin-top:750px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";

    public void toogleColor1()
    {
        if (einkauf)
        {
            currentColor1 = "color:black; margin-top:20px; margin-left: 23.5px; width: 200px; background-color: #cecece;";
        }
        else
        {
            currentColor1 = "color:black; margin-top:20px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";
        }
        //einkauf = !einkauf;
        uebersicht = true;
        optionen = true;
        currentColor2 = "color:black; margin-top:20px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";
        currentColor3 = "color:black; margin-top:750px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";
    }

    public void toogleColor2()
    {
        if (uebersicht)
        {
            currentColor2 = "color:black; margin-top:20px; margin-left: 23.5px; width: 200px; background-color: #cecece;";
        }
        else
        {
            currentColor2 = "color:black; margin-top:20px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";
        }
        //uebersicht = !uebersicht;
        einkauf = true;
        optionen = true;
        currentColor1 = "color:black; margin-top:20px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";
        currentColor3 = "color:black; margin-top:750px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";
    }

    public void toogleColor3()
    {
        if (optionen)
        {
            currentColor3 = "color:black; margin-top:750px; margin-left: 23.5px; width: 200px; background-color: #cecece;";
        }
        else
        {
            currentColor3 = "color:black; margin-top:750px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";
        }
        //optionen = !optionen;
        einkauf = true;
        uebersicht = true;
        currentColor1 = "color:black; margin-top:20px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";
        currentColor2 = "color:black; margin-top:20px; margin-left: 23.5px; width: 200px; background-color: #fafafa;";

    }
}
